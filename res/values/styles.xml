<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ac_start_navi_btn_1">
        <item name="android:textColor">#FF5ad6bc</item>
        <item name="android:textSize">28sp</item>     
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dr_tag_button_ac_start_selector</item>
        
    </style>
     <style name="ac_start_navi_btn_2">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">28sp</item>  
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dr_tag_button_ac_start_selector_2</item>
       
    </style>

    <style name="navi_bar_btn">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="tag_answer">
        <item name="android:layout_margin">@dimen/tag_margin</item>
        <item name="android:background">@color/tertiary_app_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/start_menu_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="tag_answer_close">
        <item name="android:layout_margin">@dimen/tag_margin</item>
        <item name="android:background">@color/tertiary_answer_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/start_menu_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>
    

    <style name="tag_quest">
        <item name="android:layout_margin">@dimen/tag_margin</item>
        <item name="android:background">@color/tertiary_app_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/start_menu_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>