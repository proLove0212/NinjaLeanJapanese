<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/layout"
    android:layout_width="@dimen/list_game_quest_avatar_size"
    android:layout_height="@dimen/list_game_quest_avatar_size"
    android:background="@android:color/transparent" >
    
    

    <ImageView
        android:id="@id/img_avatar"
        android:layout_width="@dimen/list_game_quest_avatar_size"
        android:layout_height="@dimen/list_game_quest_avatar_size"
        android:layout_centerInParent="true"
        android:background="@drawable/border_avatar"
        android:contentDescription="@string/image_description"
        android:scaleType="centerInside"
        android:padding="1dp"
         />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="@color/primary_app_color_transparent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_alignBottom="@id/img_avatar"
     >

    <ImageView
        android:id="@id/rate_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_marginTop="@dimen/list_game_categories_item_horizontal_padding"
        android:layout_marginBottom="@dimen/list_game_categories_item_horizontal_padding"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_rate_off" />

    <ImageView
        android:id="@id/rate_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        android:layout_marginTop="@dimen/list_game_categories_item_horizontal_padding"
        android:layout_marginBottom="@dimen/list_game_categories_item_horizontal_padding"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_rate_off" />

    <ImageView
        android:id="@id/rate_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_game_categories_item_horizontal_padding"
        android:layout_marginBottom="@dimen/list_game_categories_item_horizontal_padding"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_rate_off" />
    </LinearLayout>

</RelativeLayout>